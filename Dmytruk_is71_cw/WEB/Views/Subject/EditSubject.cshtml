@model WEB.Models.EditModels.EditSubjectViewModel
@{
    ViewBag.Title = "EditSubject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card m-5">
    <h3 class="card-header text-center">Змінити назву предмета @Model.Name</h3>
    <div class="card-body">
        <form class="p-a-1" action="/Subject/EditSubject" method="post">
            <div class="form-group">
                <input class="form-control" type="hidden" name="Id" value="@Model.Id" readonly />
                <label for="Name"> Назва: </label>
                <input class="form-control" name="Name" value="@Model.Name" />
            </div>
            <div class="text-center">
                <button type="submit">Зберегти</button>
            </div>
        </form>
    </div>
</div>
<p>@Html.ActionLink("До списку предметів", "ShowSubject", "Subject")</p>
<p>@Html.ActionLink("На головну", "Index", "Home")</p>
