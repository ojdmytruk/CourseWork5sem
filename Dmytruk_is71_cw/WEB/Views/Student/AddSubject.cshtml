@model WEB.Models.EducationProcessViewModel
@{
    ViewBag.Title = "AddSubject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card m-5">
    <h3 class="card-header text-center">Додати новий предмет студенту</h3>
    <div class="card-body">
        <form class="p-a-1" action="/Student/AddSubject" method="post">
            <div class="form-group">
                <input class="form-control" type="hidden" name="IdStudent" value="@Model.IdStudent" readonly />
                <label for="SubjectName"> Предмет: </label>
                <select id="subjects" name="SubjectName">
                    @foreach (var item in ViewBag.subjects)
                    {
                        <option>@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="SubjectResult"> Оцінка: </label>
                <input class="form-control" style="width:75px" name="SubjectResult" type="number" size="3" max="100" min="1" value="@Model.SubjectResult" />
            </div>
            <div class="text-center">
                <button type="submit">Зберегти</button>
            </div>
        </form>
    </div>
</div>
<p>@Html.ActionLink("До списку студентів", "ShowStudent", "Student")</p>
<p>@Html.ActionLink("На головну", "Index", "Home")</p>
